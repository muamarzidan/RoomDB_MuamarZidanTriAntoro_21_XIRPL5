<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashbord"
    android:orientation="vertical"
    android:background="@drawable/background"
    >


    <RelativeLayout
        android:id="@+id/topArea"
        android:layout_width="match_parent"
        android:layout_height="250dp">


        <TextView
            android:id="@+id/myDashboard"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="64dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="197dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/poppins_bold"
            android:text="My Yanime"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dashboard_adminName"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="63dp"
            android:layout_marginTop="149dp"
            android:layout_marginEnd="227dp"
            android:layout_marginBottom="76dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Zidan"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/createee2"
            android:layout_width="112dp"
            android:layout_height="190dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="269dp"
            android:layout_marginLeft="97dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="100dp"
            android:layout_marginBottom="24dp"
            android:layout_toRightOf="@id/myDashboard"
            android:src="@drawable/sssss" />


    </RelativeLayout>

    <GridLayout
                android:id="@+id/createee"
                android:layout_width="250dp"
                android:layout_height="300dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="80dp"
                android:columnCount="1"
                android:padding="30dp">


                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="250dp"
                    android:layout_margin="2dp"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <ImageButton
                        android:id="@+id/create"
                        android:layout_width="184dp"
                        android:layout_height="177dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        app:srcCompat="@drawable/book"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Create Your Anime List"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>


    </GridLayout>


</LinearLayout>